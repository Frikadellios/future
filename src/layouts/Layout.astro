---
import BaseHead from '@/components/BaseHead.astro'
import ProviderAnimations from '@/components/layout/provider-animations.astro'
import TailwindIndicator from '@/components/layout/tailwind-indicator.astro'
import BackgroundGrid from '@/components/ui/gridbg'
import { cn } from '@/lib/utils'
import '@/styles/main.css'
import ClientRouter from 'astro/components/ClientRouter.astro'

type Props = {
  title: string
  description?: string
  lang?: string
  mainClass?: string
  bodyClass?: string
}

const { title, description, lang, mainClass, bodyClass } = Astro.props as Props
---

<!doctype html>
<html lang={lang} class="bg-trancperent text-foreground scroll-smooth">
	<head>
        <BaseHead title={title} description={description || ''} />
		    <ProviderAnimations />
        <ClientRouter />
	</head>
	<body class={cn('flex bg-background text-foreground flex-col antialiased min-h-screen', bodyClass)}>
    <BackgroundGrid />
			<main class={cn(mainClass)}>
				<slot />
				<TailwindIndicator />
      </main>
	</body>
</html>
